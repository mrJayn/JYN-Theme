// Peak View is an inline preview of code. You can open it
// by clicking on the git diff borders in the gutter of the editor which brings up the current changes
{
	// Right click on a function/variable and click on peek view in the context menu
	peekView: {
		border: { value: '{color.border.primary}' },
	},

	peekViewEditor: {
		background: { value: '{color.background.primary}' },
		matchHighlightBackground: { value: '{color.background.quaternary}' },
		matchHighlightBorder: {},
	},

	//
	peekViewResult: {
		background: { value: '{color.background.secondary}' },
		fileForeground: { value: '{color.font.link.primary.active}' },
		lineForeground: { value: '{color.font.primary}' },
		matchHighlightBackground: { value: '{editor.findMatchHighlightBackground}' },
		selectionBackground: { value: '{editor.findMatchBackground}' },
		selectionForeground: {},
	},

	peekViewTitle: {
		background: { value: '{color.background.tertiary}' },
	},

	peekViewTitleDescription: {
		foreground: { value: '{color.font.primary}' },
	},

	peekViewTitleLabel: {
		foreground: { value: '{color.font.tertiary}' },
	},
}
